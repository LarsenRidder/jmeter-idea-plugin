<idea-plugin version="2" url="https://github.com/ponomandr/jmeter-idea-plugin">
    <name>JMeter plugin</name>
    <description>Open JMeter files with JMeter. Create run configurations if special test setup is required.</description>
    <version>0.3</version>
    <vendor>Andrey Ponomarev</vendor>
    <category>Tools Integration</category>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="111.277"/>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <action id="JMeter.Open" class="idea.plugin.jmeter.OpenWithJmeterAction">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="idea.plugin.jmeter.JmeterFileTypeFactory"/>
        <projectConfigurable instance="idea.plugin.jmeter.settings.JmeterSettingsConfigurable"/>
        <configurationType implementation="idea.plugin.jmeter.run.JmeterConfigurationType"/>
        <programRunner implementation="idea.plugin.jmeter.run.JmeterProgramRunner"/>
    </extensions>

    <change-notes>
        <![CDATA[
        <h4>Changes in 0.3</h4>
        <ul>
            <li>Added run configurations.
        </ul>
        <h4>Changes in 0.2</h4>
        <ul>
            <li>JMETER_HOME can be overriden in project settings
        </ul>
        ]]>
    </change-notes>
</idea-plugin>